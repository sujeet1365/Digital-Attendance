<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash__screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="3"
    android:background="@color/background_color"
    tools:context="com.kpf.sujeet.digitaleducation.Activity.Splash_Screen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/sarva_siksha_abhiyan"
        android:layout_above="@+id/splash_text"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:id="@+id/img_kpf_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/kpf_icon"
        android:layout_above="@+id/splash_text"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:layout_below="@+id/splash_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/splash_screen_quote"/>
    </LinearLayout>

</LinearLayout>
